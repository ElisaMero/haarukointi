{
    "python.testing.cwd": "${workspaceFolder}/src",
    "python.envFile": "${workspaceFolder}/.env.test",
    "python.testing.pytestArgs": [
        "-c",
        "${workspaceFolder}/pytest.ini"
    ],
    "isort.args": [
        "--profile=black"
    ],
    "pylint.cwd": "${workspaceFolder}/src",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "pylint.args": [
        "--rcfile=${workspaceFolder}/.pylintrc",
        "--disable=E0401",
        "--disable=E0611",
    ],
    "[robotframework]": {
        "editor.defaultFormatter": "robocorp.robotframework-lsp"
    }
}